<?xml version="1.0" encoding="UTF-8"?>

<web-app
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	
		<servlet>
			<servlet-name>ListeMedecins</servlet-name>
			<servlet-class>com.octest.servlets.ListeMedecins</servlet-class>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>ListeMedecins</servlet-name>
			<url-pattern>/listemedecins</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>ListePatients</servlet-name>
			<servlet-class>com.octest.servlets.ListePatients</servlet-class>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>ListePatients</servlet-name>
			<url-pattern>/listepatients</url-pattern>
		</servlet-mapping>
		
		<jsp-config>
			<jsp-property-group>
				<url-pattern>*.jsp</url-pattern>
				<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
			</jsp-property-group>
		</jsp-config>
		
</web-app>